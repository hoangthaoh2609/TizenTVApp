<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- TV-Optimized Styles -->
    
    <!-- Base Style -->
    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
    </Style>

    <!-- Label Styles -->
    <Style x:Key="HeaderLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="48" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="HorizontalOptions" Value="Start" />
    </Style>

    <Style x:Key="TitleLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="42" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="SubtitleLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontSize" Value="32" />
    </Style>

    <Style x:Key="BodyLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="28" />
    </Style>

    <Style x:Key="CaptionLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
        <Setter Property="FontSize" Value="24" />
    </Style>

    <Style x:Key="MetadataLabelStyle" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextTertiary}" />
        <Setter Property="FontSize" Value="22" />
    </Style>

    <!-- Button Styles -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="FontSize" Value="32" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="Padding" Value="40,20" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="HeightRequest" Value="80" />
        <Setter Property="MinimumWidthRequest" Value="200" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLight}" />
                            <Setter Property="BorderColor" Value="{StaticResource FocusBorder}" />
                            <Setter Property="BorderWidth" Value="4" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
                            <Setter Property="Scale" Value="0.95" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Secondary}" />
                            <Setter Property="TextColor" Value="{StaticResource TextDisabled}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        <Setter Property="BorderColor" Value="{StaticResource Border}" />
        <Setter Property="BorderWidth" Value="2" />
    </Style>

    <!-- Frame Styles -->
    <Style x:Key="CardFrameStyle" TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" />
        <Setter Property="BorderColor" Value="{StaticResource Border}" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Focused">
                        <VisualState.Setters>
                            <Setter Property="BorderColor" Value="{StaticResource FocusBorder}" />
                            <Setter Property="BorderWidth" Value="4" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="VideoCardFrameStyle" TargetType="Frame" BasedOn="{StaticResource CardFrameStyle}">
        <Setter Property="HeightRequest" Value="300" />
        <Setter Property="WidthRequest" Value="400" />
        <Setter Property="Padding" Value="0" />
    </Style>

    <!-- Grid Styles -->
    <Style x:Key="ContentGridStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" />
        <Setter Property="RowSpacing" Value="20" />
        <Setter Property="ColumnSpacing" Value="20" />
        <Setter Property="Padding" Value="40" />
    </Style>

    <!-- CollectionView Styles -->
    <Style x:Key="HorizontalCollectionViewStyle" TargetType="CollectionView">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="SelectionMode" Value="Single" />
    </Style>

    <!-- Slider Styles -->
    <Style x:Key="PlayerSliderStyle" TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{StaticResource Primary}" />
        <Setter Property="MaximumTrackColor" Value="{StaticResource Secondary}" />
        <Setter Property="ThumbColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="HeightRequest" Value="40" />
    </Style>

    <!-- ActivityIndicator Styles -->
    <Style x:Key="LoadingIndicatorStyle" TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource Primary}" />
        <Setter Property="HeightRequest" Value="60" />
        <Setter Property="WidthRequest" Value="60" />
    </Style>

</ResourceDictionary>
