<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- TV Color Palette - Dark Theme Optimized -->
    
    <!-- Primary Colors -->
    <Color x:Key="Primary">#0078D4</Color>
    <Color x:Key="PrimaryDark">#005A9E</Color>
    <Color x:Key="PrimaryLight">#4A9AD7</Color>
    
    <!-- Secondary Colors -->
    <Color x:Key="Secondary">#6C757D</Color>
    <Color x:Key="SecondaryDark">#495057</Color>
    <Color x:Key="SecondaryLight">#ADB5BD</Color>
    
    <!-- Background Colors -->
    <Color x:Key="Background">#0A0A0A</Color>
    <Color x:Key="BackgroundDark">#000000</Color>
    <Color x:Key="BackgroundLight">#1A1A1A</Color>
    <Color x:Key="Surface">#1E1E1E</Color>
    <Color x:Key="SurfaceDark">#141414</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#B0B0B0</Color>
    <Color x:Key="TextTertiary">#707070</Color>
    <Color x:Key="TextDisabled">#4A4A4A</Color>
    
    <!-- Focus Colors -->
    <Color x:Key="Focus">#FFFFFF</Color>
    <Color x:Key="FocusBorder">#0078D4</Color>
    <Color x:Key="FocusGlow">#4A9AD7</Color>
    
    <!-- Accent Colors -->
    <Color x:Key="Success">#28A745</Color>
    <Color x:Key="Warning">#FFC107</Color>
    <Color x:Key="Error">#DC3545</Color>
    <Color x:Key="Info">#17A2B8</Color>
    
    <!-- Overlay Colors -->
    <Color x:Key="OverlayDark">#CC000000</Color>
    <Color x:Key="OverlayLight">#80000000</Color>
    <Color x:Key="OverlayMedium">#A0000000</Color>
    
    <!-- Border Colors -->
    <Color x:Key="Border">#333333</Color>
    <Color x:Key="BorderLight">#444444</Color>
    <Color x:Key="BorderDark">#222222</Color>

</ResourceDictionary>
